@model IEnumerable<School.Management.Core.Entities.Student>


@{
    ViewData["Title"] = "Student list ";
}

<h1>Students</h1>
<div style="font-family:Arial, Helvetica, sans-serif">
    <div>
        <label> select class to display list </label>
        <select id="ClassId" name="ClassName" asp-items="ViewBag.classes">
            <option value="0">Please select</option>
        </select>
    </div>

    <p>
        <a asp-action="Create"> Create New Student</a>
    </p>
    <table class="table" border="1">
        <thead>


            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

                        @using (Html.BeginForm("Delete", "Student", new { id = item.Id }))
                        {
                            <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this item?');" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
