@model School.Management.Core.Entities.Teacher

@{
    ViewData["Title"] = "Create New teacher";
}

<h1>Create</h1>

<h4>Teacher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>          
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @for (int i = 0; i < Model.classes.Count; i++)
                {
                    <li>

                        <tr>
                            <td>
                                @Html.CheckBoxFor(m => Model.classes[i].Selected)
                            </td>
                            <td>
                                @Html.DisplayFor(m => Model.classes[i].ClassName)
                                @Html.HiddenFor(m => Model.classes[i].ClassID)
                            </td>
                        </tr>

                    </li>
                }
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
